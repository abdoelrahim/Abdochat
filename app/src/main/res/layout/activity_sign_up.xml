<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context="com.example.abdelrahim.abdochat.SignUp">
    <include layout="@layout/abb_bar_layout" android:id="@+id/Signup_tollbar"></include>

    <ImageView
        android:id="@+id/Login_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@drawable/google" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Signup_input_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Login_icon"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        >

        <EditText
            android:id="@+id/Signup_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Signup_input_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Signup_input_email"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        >

        <EditText
            android:id="@+id/Signup_et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/Signup_btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Signup_input_password"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:backgroundTint="#1DA1F2"
        />

    <TextView
        android:id="@+id/Signup_tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Signup_btn_register"
        android:layout_gravity="center"
        android:layout_marginStart="120dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerInParent="true"
        android:text="Forget Password ?"
        android:textColor="#517ed9"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/Signup_tv_OR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/Signup_tv_forget_password"
        android:layout_marginStart="180dp"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:focusable="true"
        android:text="OR"
        android:textStyle="bold"

        />

    <TextView
        android:id="@+id/Signup_tv_loginMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Signup_tv_OR"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:clickable="true"
        android:text="Already have Account? login me ."
        android:textColor="#517ed9"
        android:singleLine="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:focusable="true"
        />



</RelativeLayout>

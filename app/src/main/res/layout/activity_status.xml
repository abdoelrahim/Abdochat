<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.abdelrahim.abdochat.StatusActivity">
    <include layout="@layout/abb_bar_layout" android:id="@+id/status_toolbar"></include>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/Status_input_Status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"


        >

        <EditText
            android:id="@+id/Status_et_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="write your status"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/Status_btn_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginEnd="30dp"
        android:layout_below="@+id/Status_input_Status"
        android:layout_marginTop="52dp"
        android:backgroundTint="#FFFF643D"
        android:text="Change Status"
        android:textAllCaps="false"
        android:textSize="18sp"

        />






</RelativeLayout>
